generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type SalesCustomer {
  age          Int
  email        String
  gender       String
  satisfaction Int
}

type SalesItems {
  name     String
  price    Float
  quantity Int
  tags     String[]
}

model sales {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  couponUsed     Boolean
  customer       SalesCustomer
  items          SalesItems[]
  purchaseMethod String
  saleDate       DateTime      @db.Date
  storeLocation  String
}
